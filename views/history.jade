extends layout

block content
  .container.mt-4
    h1.mb-4 Asset History
    table#historyTable.table.table-bordered.table-striped.table-hover.w-100(style='padding-top: 8px!important;')
      thead
        tr
          th(style="width: 5%; white-space: nowrap") S No.
          th(style="width: 15%; white-space: nowrap") Asset Name
          th(style="width: 15%; white-space: nowrap") Employee Name
          th(style="width: 15%; white-space: nowrap") Action
          th(style="width: 20%; white-space: nowrap") Action Date
          th(style="width: 30%; white-space: nowrap") Remarks
      tbody
        each history,index in assetHistories
          tr
            td= index + 1
            td= history.asset_name 
            td= history.employee_name
            td= history.action_type
            td= new Date(history.action_date).toLocaleDateString('en-GB')
            td= history.remarks

  script(src='https://code.jquery.com/jquery-3.6.0.min.js')
  script(src='https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js')
  script.
    $(document).ready(function () {
      $('#historyTable').DataTable({
        searching: false,
        paging: true,
        ordering: true
      });
    });
