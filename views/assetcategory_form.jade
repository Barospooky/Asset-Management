extends layout

block content
  .container.mt-4
    h2 #{action} Asset Category

    form(method='post', action=(action === 'Edit' ? '/assetcategory/edit/' + category.id : '/assetcategory/add'))
      .form-group
        label(for='name') Name
        input.form-control(type='text', name='name', required, value=category.name || '')

      .form-group
        label(for='description') Description
        textarea.form-control(name='description') #{category.description || ''}

    
      button.btn.btn-primary(type='submit')(style='margin: 2px;') #{action}
      a.btn.btn-secondary(href='/assetcategory')(style='margin: 2px;') Cancel
